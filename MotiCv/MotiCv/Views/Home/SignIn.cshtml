@model LoginUserModel
@{
    ViewData["Title"] = "SignIn";
    Layout = null;
}

<link href="~/Assets/Adminstyle/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Assets/Adminstyle/css/demo23.min.css" rel="stylesheet" />
<link href="~/Assets/Adminstyle/css/metisMenu.css" rel="stylesheet" />
<link href="~/Assets/Adminstyle/css/style.css" rel="stylesheet" />
<link href="~/Assets/Adminstyle/css/style.min.css" rel="stylesheet" />
<div class="col-lg-12">
    <div class="white_box mb_30">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="modal-content cs_modal">
                    <div class="modal-header justify-content-center theme_bg_1">
                        <h5 class="modal-title text_white">Log in</h5>
                    </div>
                    <div >
                        <form asp-controller="Home" asp-action="SignIn" method="post">
                            @if (!string.IsNullOrWhiteSpace(ViewBag.Massage))
                            {
                                <div class="alert alert-danger text-white">
                                    @ViewBag.Massage
                                </div>
                            }
                            <div >
                                <input class="form-group" asp-for="UserName" placeholder="Enter your email or name">
                            </div>
                            <div>
                                <input class="form-group" asp-for="Password" placeholder="Password">
                            </div>
                            <button type="submit">Sign In</button>
                            <p>Need an account? <a data-toggle="modal" data-target="#sing_up" data-dismiss="modal" asp-controller="Home" asp-action="SignIn"> Sign In</a></p>
                            <p>Need an account? <a data-toggle="modal" data-target="#sing_up" data-dismiss="modal"asp-controller="Home" asp-action="Register"> Register</a></p>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="~/Assets/Adminstyle/js/jquery-3.4.1.min.js"></script>